{
  "name": "sis-formatter",
  "displayName": "SIS Formatter",
  "description": "Special xml formatter for xml files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "xml",
        "extensions": [
          ".xml"
        ]
      }
    ],
    "commands": [
      {
        "command": "sis-formatter.formatXml",
        "title": "Format XML (SIS)"
      }
    ],
    "formatters": [
      {
        "language": "xml"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "prettier": "^3.2.5",
    "xml-formatter": "^3.6.2"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@types/xml-formatter": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  }
}
